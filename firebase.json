{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.gcloudignore",
      "**/.firebase/**",
      "**/.github",
      "**/public/",
      "**/.gitignore",
      "**/.env",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
